<Page
    x:Class="FirstUWPApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FirstUWPApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="pressMeButton" Click="PressMeButton_Click" Foreground="Green" FontWeight="ExtraBold" FontSize="36" Content="Speak" Height="212" Width="239" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Text="TextBlock" ></TextBlock>
        <TextBox AcceptsReturn="True" x:Name="Input" HorizontalAlignment="Center" PlaceholderText="TextBox" TextWrapping="Wrap" FontSize="24" MinWidth="400" MaxHeight="36" GotFocus="Input_GotFocus"></TextBox>
    </Grid>
</Page>
